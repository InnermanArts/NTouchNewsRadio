<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:background="@android:color/transparent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.something.dennisthicklin.ntouchnewsradio.MainActivity"
        android:background="@drawable/splash_background"
        android:contentDescription="layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_field"
                android:padding="5dp"
                android:hint="Name..."
                android:layout_marginTop="10dp"
                android:layout_weight="0.2"
                android:textColorHint="@android:color/darker_gray"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="4"
                android:foreground="@drawable/ripple_effect"
                android:textColor="#000000"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field"
                />
            <EditText
                android:id="@+id/email_text_field"
                android:padding="5dp"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginLeft="20dp"
                android:hint="Email..."
                android:textStyle="italic"
                android:foreground="@drawable/ripple_effect"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0.2"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field"
                />
            <EditText
                android:id="@+id/subject_field"
                android:padding="5dp"
                android:hint="Subject..."
                android:layout_marginLeft="20dp"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="italic"
                android:foreground="@drawable/ripple_effect"
                android:layout_weight="0.2"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field"
                />
            <EditText
                android:id="@+id/message_field"
                android:padding="5dp"
                android:hint="Your Message..."
                android:layout_marginLeft="20dp"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginRight="20dp"
                android:foreground="@drawable/ripple_effect"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"
                android:layout_weight="0.2"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/text_field"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/submitButton"
                    android:text="Send"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bar"
            android:contentDescription="bar"
            android:background="@android:color/background_dark"
            >
            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/menu_button"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/headerlogo"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/footer"
            android:background="@android:color/background_dark"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:id="@+id/liveRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#000000"
        app:itemTextColor="#ffffff"
        android:foreground="@drawable/ripple_effect"
        android:id="@+id/navigationView"
        app:menu="@menu/sidebar_menu">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>